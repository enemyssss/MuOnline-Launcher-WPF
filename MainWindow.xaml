<Window x:Class="MuOnline_Launcher_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuOnline_Launcher_WPF"
        mc:Ignorable="d"
        Title="Laucher" Height="600" Width="800" WindowStartupLocation="CenterScreen" Cursor="Arrow" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="350"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="130"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28.5"></ColumnDefinition>
            <ColumnDefinition Width="350.5"/>
            <ColumnDefinition Width="63"/>
            <ColumnDefinition Width="350"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="3">

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="4">

        </StackPanel>

        <DockPanel Grid.Row="2" Grid.ColumnSpan="4">
            <Button Content="PLAY" DockPanel.Dock="Left"></Button>
            <Button Content="CLOSE" DockPanel.Dock="Right" Click="Button_Close"></Button>
            <Button Content="SETTINGS" Click="Button_Settings" ></Button>
        </DockPanel>
    </Grid>
</Window>
