<Window x:Class="MuOnline_Launcher_WPF.Mirrors.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuOnline_Launcher_WPF.Mirrors"
        mc:Ignorable="d"
        Title="Settings" Height="330" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="230"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBox Text="Sound / Music" TextAlignment="Center"></TextBox>
           
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBox Text="Resolution" TextAlignment="Center"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0">
            <TextBox Text="Language" TextDecorations="{x:Null}" TextAlignment="Center"/>
        </StackPanel>

        <Button Content="Save" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
